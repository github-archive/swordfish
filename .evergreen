require 'capybara/poltergeist'

Evergreen.configure do |config|
  config.driver = :poltergeist
  config.spec_dir = 'spec/javascripts'
  config.template_dir = 'spec/javascripts/templates'
  config.public_dir = 'public'
end

# Add extension directory to asset path
Rails.application.assets.append_path Rails.root.join('extensions')
Rails.application.assets.append_path Rails.root.join('spec', 'javascripts')

require 'webmock'
WebMock.disable_net_connect!(:allow_localhost => true)
